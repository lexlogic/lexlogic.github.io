#baseurl = "https://lexlogic.github.io"  # Include trailing slash
baseurl = "http://localhost:1313"  # Include trailing slash
title = "Logic Sec"
theme = "clarity"
author = "Logic"
copyright = "Copyright Â© 2019, Weru and the Hugo Authors; all rights reserved."
canonifyurls = true
paginate = 6
summaryLength = 5
disqusShortname = 'lexlogic'


[taxonomies]
  category = "category"
  tag = "tags"



[markup]
  defaultMarkdownHandler = 'goldmark'
  [markup.asciidocExt]
    backend = 'html5'
    extensions = []
    failureLevel = 'fatal'
    noHeaderOrFooter = true
    preserveTOC = false
    safeMode = 'unsafe'
    sectionNumbers = false
    trace = false
    verbose = false
    workingFolderCurrent = false
    [markup.asciidocExt.attributes]
  [markup.goldmark]
    [markup.goldmark.extensions]
      definitionList = true
      footnote = true
      linkify = true
      linkifyProtocol = 'https'
      strikethrough = true
      table = true
      taskList = true
      typographer = true
    [markup.goldmark.parser]
      autoHeadingID = true
      autoHeadingIDType = 'github'
      [markup.goldmark.parser.attribute]
        block = false
        title = true
    [markup.goldmark.renderer]
      hardWraps = true
      unsafe = true
      xhtml = false
  [markup.highlight]
    codeFences = true
    guessSyntax = true
    hl_Lines = ""
    lineNoStart = 1
    lineNos = true
    lineNumbersInTable = false
    noClasses = false
    tabWidth = 2
    style = 'dracula'
  [markup.tableOfContents]
    endLevel = 3
    ordered = false
    startLevel = 2


